        <form action="/Paymentthroughcheck/<%= list2 %>" method="GET">
          <input type="text" name="quantity" value="<%= quantity %>" hidden>
          <input type="text" name="amount" value="<%= amount %>" hidden>

          <button type="submit" name="pay" class="btn btn-danger">Paymet Through Cheque</button>
      </form>
